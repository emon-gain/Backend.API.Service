pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout your source code from Git
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Node.js and npm
                tool 'Node.js'
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                // Run the npm build script
                sh 'npm run build'
            }
        }
    }
}
